<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 

  <display-name>Access Control Web Application</display-name>

  <!-- Security Constraints -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Submission area</web-resource-name>
      <!-- Define the context-relative URL(s) to be protected -->
      <url-pattern>/submit.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>applicant</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Cancellation area</web-resource-name>
      <!-- Define the context-relative URL(s) to be protected -->
      <url-pattern>/cancel.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>applicant</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Specialization Analytics area</web-resource-name>
      <!-- Define the context-relative URL(s) to be protected -->
      <url-pattern>/specializationAnalytics.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>chair</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Discipline Analytics area</web-resource-name>
      <!-- Define the context-relative URL(s) to be protected -->
      <url-pattern>/disciplineAnalytics.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>chair</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Applications area</web-resource-name>
      <!-- Define the context-relative URL(s) to be protected -->
      <url-pattern>/applications.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>chair</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Login configuration uses form-based authentication -->
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Basic Authentication Area</realm-name>
    <!-- 
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login-error.jsp</form-error-page>
    </form-login-config>
     -->
  </login-config>

  <!-- Security roles referenced by this web application -->
  <security-role>
    <role-name>applicant</role-name>
  </security-role>
  
  <security-role>
    <role-name>chair</role-name>
  </security-role>

  <welcome-file-list>
    <welcome-file>names.html</welcome-file>
  </welcome-file-list>
</web-app>
